#-----------------------------------------------------
# Example Makefile.in for library COPT
#-----------------------------------------------------


#-----------------------------------------------------
# Compilers
#-----------------------------------------------------

CC 	= gcc
CXX = g++

#-----------------------------------------------------
# Flags for compilers
#----------------------------------------------------- 

CFLAGS 		= -g -Wall
CXXFLAGS 	= -O3	-std=c++11

#-----------------------------------------------------
# Include Path
#-----------------------------------------------------


DIR_INC = -I./include

#-----------------------------------------------------
# Library Path
#-----------------------------------------------------


DIR_LIB = ./


#-----------------------------------------------------
# Libraries that are used
#-----------------------------------------------------

LIB = -lumfpack -lamd -lsuitesparseconfig -lcholmod -lcolamd -llapack -lblas

#-----------------------------------------------------
# OBJ Path
#-----------------------------------------------------

DIR_OBJ = ./obj


#-----------------------------------------------------
# BIN Path
#-----------------------------------------------------


DIR_BIN = ./bin

